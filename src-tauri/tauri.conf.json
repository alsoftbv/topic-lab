{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "MQTT Topic Lab",
    "version": "../package.json",
    "identifier": "com.topiclab.mqtt",
    "build": {
        "beforeDevCommand": "npm run dev",
        "devUrl": "http://localhost:1420",
        "beforeBuildCommand": "npm run build",
        "frontendDist": "../dist"
    },
    "app": {
        "windows": [
            {
                "title": "MQTT Topic Lab",
                "width": 1000,
                "height": 700,
                "minWidth": 550,
                "minHeight": 450,
                "visible": false
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ]
    }
}